<div class="row">
    <div class="col-md-12">
          <h2>categories</h2>
          <hr />
          {{#if categories}}
    </div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        
        </tr>
        </thead>

        <tbody>
            {{#each categories}}
            <tr>
            <td>{{this.id}}</td>
            <td>{{this.category}}</td>
     
            </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
    {{else}}
   <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
</div>
    {{/if}}
    </div>
</div>

