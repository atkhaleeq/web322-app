
{{#if errorMessage}}
<div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>


{{else}}
<div class="alert alert-success"> <strong>Success:</strong> {{successMessage}}</div><a class="btn btn-success pull-right" href="/login">&nbsp;&nbsp;&nbsp;Proceed to Log in&nbsp;&nbsp;&nbsp;</a><br /><br /><br /> 

<div class="container" style="padding-top: 90px;">
  <form method="POST" action="/register">
  <div class="L3">
        <label for="userName" class="form-label">User Name</label>
      <input
        type="text"
        class="form-control"
        id="userName"
        name="userName"
        placeholder="User Name"
        value="{{userName}}"
        required
      />
  </div>

     <div class="L3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
        required
      />

    </div>

    <div class="L3">
      <label for="password2" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        id="password2"
        name="password2"
        placeholder="Confirm Password"
        required
      />

    </div>

         <div class="L3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="email"
        required
      />

    </div>
    <button type="submit" class="btn btn-primary">Register</button>

</form>
{{/if}}